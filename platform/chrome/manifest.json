{
    "description": "SSO via microsoft-identity-broker",
    "manifest_version": 3,
    "name": "EntraID SSO",
    "version": "0.5",
    "icons": {
        "48": "icons/sso-mib_48.png",
        "128": "icons/sso-mib_128.png"
    },
    "action": {
        "default_icon": {
            "48": "icons/sso-mib_48.png",
            "128": "icons/sso-mib_128.png"
        },
        "default_title": "EntraID SSO",
        "default_area": "navbar"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "alarms",
        "nativeMessaging",
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "https://login.microsoftonline.com/*"
    ]
}
