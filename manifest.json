{
    "description": "SSO via microsoft-identity-broker",
    "manifest_version": 3,
    "name": "EntraID SSO",
    "version": "0.1",
    "icons": {
        "48": "icons/sso_mib.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "sso_mib@siemens.com",
            "strict_min_version": "50.0"
        }
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "*://login.microsoftonline.com/*"
            ],
            "js": ["content.js"]
        }
    ],
    "permissions": [
        "nativeMessaging",
        "cookies"
    ],
    "host_permissions": [
        "*://login.microsoftonline.com/*"
      ]
}
